@model IEnumerable<Albums.Models.Song>

@{
    Layout = "~/Views/_header.cshtml";
}

<!DOCTYPE html>
<div class="container-fluid">

    <div class="row">

        <div class="col-md-8 col-md-offset-2">
            <h1>Songs</h1>
            <a href="@Url.Action("Create", "Songs")">Add New Song</a>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Song</th>
                        <th>Artist</th>
                        <th>Album</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@Html.DisplayFor(model => item.SongTitle)</td>
                            <td>@Html.DisplayFor(model => item.Album.AlbumArtistName)</td>
                            <td>@Html.DisplayFor(model => item.Album.AlbumTitle)</td>

                            <td>
                                <!-- EDIT/UPDATE -->
                                @Html.ActionLink("Edit", "Edit", new { id = item.SongId }, new { @class = "btn btn-default btn-xs" })

                                <!-- DELETE -->
                                @Html.ActionLink("Delete", "Delete", new { id = item.SongId }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>

                    }

                </tbody>
            </table>

        </div>

    </div> <!-- /row -->

</div> <!-- /container -->
